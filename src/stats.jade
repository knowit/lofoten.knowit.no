  body
    .page.pure-g
      .pure-u-1
        h1 Knowit Developer Summit 2015
      .pure-u-1.pure-u-md-1-2.pure-u-xl-1-4
        #speaker-chart
          h3
            span Participation
            a.reset(href='javascript:speakerChart.filterAll();dc.redrawAll()' style='display:none') reset chart
        #data-count
        #company-chart
          h3
            span Company
            a.reset(href='javascript:companyChart.filterAll();dc.redrawAll()' style='display:none') reset chart
      .pure-u-1.pure-u-md-1-2.pure-u-xl-1-4
        #country-chart
          h3
            span Country
            a.reset(href='javascript:countryChart.filterAll();dc.redrawAll()' style='display:none') reset chart
        #city-chart
          h3
            span City
            a.reset(href='javascript:cityChart.filterAll();dc.redrawAll()' style='display:none') reset chart
      .pure-u-1.pure-u-xl-1-2
        table#data-table
    script.
      window.KDS_ATTENDEES=JSON.parse('!{JSON.stringify(attendees)}');
